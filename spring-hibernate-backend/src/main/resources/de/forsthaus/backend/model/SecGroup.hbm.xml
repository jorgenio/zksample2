<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="de.forsthaus.backend.model.SecGroup" table="sec_group">

		<!--
			<id name="id" type="long"> <column name="grp_id" /> <generator
			class="assigned" /> </id>
		-->

		<id name="id" type="long">
			<column name="grp_id" />
			<generator class="sequence">
				<param name="sequence">sec_group_seq</param>
				<!--
					for mySQL use generator class="native" <generator class="native" />
				-->
			</generator>
		</id>

		<version name="version" column="VERSION" type="integer" />

		<property name="grpShortdescription" type="string">
			<column name="grp_shortdescription" length="30" not-null="true"
				unique="true" />
		</property>
		<property name="grpLongdescription" type="string">
			<column name="grp_longdescription" length="1000" />
		</property>
		<set name="secGrouprights" inverse="true">
			<key>
				<column name="grp_id" />
			</key>
			<one-to-many class="de.forsthaus.backend.model.SecGroupright" />
		</set>
		<set name="secRolegroups" inverse="true">
			<key>
				<column name="grp_id" />
			</key>
			<one-to-many class="de.forsthaus.backend.model.SecRolegroup" />
		</set>
	</class>
</hibernate-mapping>
